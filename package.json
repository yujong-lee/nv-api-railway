{
  "name": "nv-api-railway",
  "version": "0.0.1",
  "private": true,
  "description": "A reliable API generated by `noun & verb`!",
  "scripts": {
    "generate": "prisma generate && npm run todo",
    "copy": "cpx \"src/**/*.sdl\" dist",
    "watch:copy": "cpx -u \"src/**/*.sdl\" dist --watch --no-initial -v",
    "build": "tsc && npm run copy",
    "watch:build": "tsc --watch",
    "watch": "concurrently \"npm:watch:*\" -k",
    "db:reset": "npm run is-dev && prisma migrate reset --skip-generate --force",
    "db:migrate": "npm run is-dev && prisma migrate dev --skip-generate",
    "dev:server": "micro-dev -p 1234 --silent",
    "dev:studio": "cross-env BROWSER=none prisma studio",
    "dev": "npm run build  && concurrently \"npm:dev:studio\" \"npm:dev:server\" -k",
    "format": "prettier --write ./src",
    "inspect": "npm run build && node --inspect node_modules/.bin/micro-dev -- -p 1234",
    "is-dev": "node scripts/is-dev.js",
    "migrate": "npm run is-dev && prisma migrate dev --skip-generate",
    "pretest": "npm run db:reset",
    "refresh": "rimraf src prisma/migrations prisma/dev.*",
    "seed": "npm run is-dev && node -r esbuild-register src/core/test-helpers/seeder-cli.ts",
    "start": "micro -l tcp://localhost:3456",
    "studio": "prisma studio",
    "test": "jest --runInBand",
    "todo": "npx leasot --ignore '**/*.sdl,**/*.json,**/*.snap' src"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@envelop/core": "^2.1.0",
    "@envelop/extended-validation": "^1.4.1",
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.5.4",
    "@paljs/plugins": "^4.0.13",
    "@prisma/client": "^4.3.1",
    "apollo-server-core": "^3.7.0",
    "apollo-server-micro": "^3.5.0",
    "graphql-middleware": "^6.1.13",
    "graphql-parse-resolve-info": "^4.12.0",
    "http-proxy": "^1.18.1",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "prisma": "^4.2.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@delucis/if-env": "^1.1.2",
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@types/http-proxy": "^1.17.9",
    "@types/jest": "^27.4.0",
    "@types/micro": "^7.3.6",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "^18.0.0",
    "@types/progress": "^2.0.5",
    "@types/validator": "^13.7.0",
    "chalk": "^4.1.2",
    "concurrently": "^6.4.0",
    "cpx2": "^4.2.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.4",
    "data-invariants": "^0.2.7",
    "esbuild-register": "^3.3.2",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.4",
    "leasot": "^12.0.0",
    "micro-dev": "sramam/micro-dev",
    "noun_and_verb": "tufan-io/noun-and-verb",
    "p-all": "^4.0.0",
    "prettier": "^2.5.1",
    "progress": "^2.0.3",
    "rimraf": "^3.0.2",
    "strip-ansi": "^6.0.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.3",
    "unsplash-js": "^7.0.15",
    "yargs": "^16.2.0"
  },
  "main": "dist/server.js",
  "prisma": {
    "seed": "npm run seed"
  }
}